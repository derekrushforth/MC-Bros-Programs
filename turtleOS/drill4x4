--[[ 
Program: drill4x4
Owner: Derek
Created: 12/16/12
Notes: Mines a 4x4 hole down to the specified
squares and comes back up for you to retrieve 
the goods.

]]

function init()
	digSquare(50)
end

function digSquare(depth)

	for i=1,depth do
	
		-- dig a 4x4 square
		for i=1,4 do
			if turtle.detect() then
				turtle.dig()
			end
			turtle.digDown()
			turtle.forward()
			turtle.turnRight()
		end
		
		-- move turtle down after a square is made
		if turtle.detectDown() then
			turtle.digDown()
			turtle.down()
		else
			turtle.down()
		end
		
		-- Refuel every 5 blocks
		if i % 5 == 1 then 
			refuel()
			print("Refueling");
		end
		
		
	end
	
	-- bring turtle up to surface
	for i=1,depth do
		turtle.up()
	end
	
	-- move out of the hole
	for i=1,2 do
		turtle.dig()
		turtle.forward()
	end
	
	
end

function refuel() 
	local fLevel = turtle.getFuelLevel()
	
	if fLevel ~= "unlimited" then
		turtle.select(1)
      	turtle.refuel(1)
	end

end

-- Initialize function
init()